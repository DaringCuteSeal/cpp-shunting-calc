{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // "${fileDirname}/testing.cpp",
                "${fileDirname}/tokenizer.cpp",
                "${fileDirname}/parser.cpp",
                "${fileDirname}/evaluator.cpp",
                "-O0",
                "-Wall",
                "-o",
                "${fileDirname}/output"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}